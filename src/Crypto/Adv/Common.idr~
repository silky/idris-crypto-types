module Crypto.Adv.Common

data BinPolicy : Type
     Leaf : (value : v) -> BinPolicy
     And  : (value : v) -> (l : BinPolicy) -> (r:BinPolicy) -> BinPolicy
     Or   : (value : v) -> (l : BinPolicy) -> (r:BinPolicy) -> BinPolicy

